</div>

<script>
    $(document).on('click', '.navbar-toggler', function () {
      var targetNavbar = $($(this).data("target"));
      targetNavbar.toggleClass("show");
    });
  
    $(document).on('click', function (event) {
      // Close navbar on window click
      if (!$(event.target).closest('.navbar').length) {
        $('.navbar-collapse.show').removeClass('show');
      }
    });
  </script>
  
  <script>
    $(document).on('click', '.linkfooterh5', function () {
      var targetNavbar = $($(this).data("target"));
      targetNavbar.toggleClass("show");
    });
  
    $(document).on('click', function (event) {
      // Close navbar on window click
      if (!$(event.target).closest('.linkcontainer').length) {
        $('.linklist-collapse.show').removeClass('show');
      }
    });
  </script>

